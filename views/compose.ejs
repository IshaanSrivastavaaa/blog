<%- include('header') -%> 
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="mb-3">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle">
  </div>
  <div class="mb-3">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="40"></textarea>
  </div>
  <br>
  <a href="/"><button type="submit" class="btn btn-primary mb-3">Publish</button></a>
</form>

